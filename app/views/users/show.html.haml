%table.profile(summary="Profile information")
  %tr
    %td.main
      %h1
        = gravatar_for @user
        = @user.name
      - unless @user.micropost.empty?
        %table.microposts
          = render @microposts
        = will_paginate @microposts
    %td.sidebar.round
      %strong Name
      = @user.name
      %br
      %strong URL
      = link_to user_path(@user), @user
      %strong Microposts
      = @user.micropost.count
